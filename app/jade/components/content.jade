include ../libs/bootstrap/carousel
include ../libs/bootstrap/dropdowns
include ../libs/bootstrap/accordion

- var user = { description: 'foo bar baz' }
- var authorised = false


.container
	.row
		.col-md-12
			+carousel("Carousel",[
				{image:"images/1.jpg",h1:"Headline #1",p:"Carousel Caption #1",button:{caption:"Sign up today",url:"#"}},
				{image:"images/4.jpg",h1:"Headline #2",p:"Carousel Caption #2",button:{caption:"Sign up today",url:"#"}},
				{image:"images/2.jpg",h1:"Headline #3",p:"Carousel Caption #3",button:{caption:"Sign up today",url:"#"}},
				{image:"images/3.jpg",h1:"Headline #4",p:"Carousel Caption #4",button:{caption:"Sign up today",url:"#"}}
])
	.row
		.col-md-12
			+dropdown("My Dropdown Menu",[{text:"Bootstrap",url:"http://www.getbootstrap.com"},{text:"JADE",url:"#"},
{text:"NodeJS",url:"http://www.nodejs.org"}
])
	.row
		.col-md-12
			+accordion("sample")
				+accordion-item-primary("Title1","sample","true")
					|This is first accordion content
				+accordion-item-default("Title2","sample")
